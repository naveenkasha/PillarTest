#include <iostream>
#include <string>
#include <vector>
#include <map>



using namespace std;

class RomanNumeral
{
public:
  RomanNumeral();
  ~RomanNumeral(){};
  string GetRomanSymbol(int number);
  
  private:
    vector <string> romanVec;
    map <int , string > romanMap;
};

RomanNumeral::RomanNumeral()
{
  romanVec.push_back("I");
  romanVec.push_back("V");
  romanVec.push_back("X");
}

string RomanNumeral::GetRomanSymbol(int number)
{
  string roman = "";
    while ( number > 0 ) {
      if ( number > 10) {
         roman += "X";
         number -= 10;
       }
      if (number > 5) {
        roman += "V";
        number -= 5;
      }
      if (number > 1 ) {
       roman += "I";
       number -= 1;
    }
}
